#!/usr/bin/env bash
# this  script manage 'manage_my_process'


PID_FILE="/var/run/my_process.pid"


start_process() {
    ./manage_my_process &           # start the process in background
    echo $! > "$PID_FILE"           # write the actual PID of the process, not the script
    echo "manage_my_process started"
}

stop_process() {
    if [ -f "$PID_FILE" ]; then
        kill "$(cat "$PID_FILE")" 2>/dev/null
        rm -f "$PID_FILE"
        echo "manage_my_process stopped"
    fi
}


case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        stop_process
        start_process
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac

